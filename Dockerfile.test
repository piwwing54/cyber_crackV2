FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    gcc \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY testing/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY testing/ ./

# Run tests
CMD ["python", "-m", "pytest", "tests/"]